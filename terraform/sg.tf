// authentik security group
resource "aws_security_group" "authentik_sg" {
  name   = "authentik-sg"
  vpc_id = aws_vpc.packtrain_vpc.id

  ingress {
    from_port   = 9000
    to_port     = 9000
    protocol    = "tcp"
    cidr_blocks = ["0.0.0.0/0"]
  }
  egress {
    from_port   = 0
    to_port     = 0
    protocol    = "-1"
    cidr_blocks = ["0.0.0.0/0"]
  }
}

// authentik -> postgres
resource "aws_security_group" "authentik_pg_sg" {
  name   = "authentik-pg-sg"
  vpc_id = aws_vpc.packtrain_vpc.id

  ingress {
    from_port       = 5432
    to_port         = 5432
    protocol        = "tcp"
    security_groups = [aws_security_group.authentik_sg.id]
  }
  egress {
    from_port   = 0
    to_port     = 0
    protocol    = "-1"
    cidr_blocks = ["0.0.0.0/0"]
  }
}


